<div class="card-container">
  <% if @cars.present? %>
    <% @cars.each do |car| %>
      <div class="card">
        <%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY", width: 400, height: 300, crop: :fill) %>
        <div class="card-details">
          <p><strong>Brand:</strong> <%= car.brand %> <%= car.model %></p>
          <p><strong>Price:</strong> <%= car.price %></p>
          <p><strong>Capacity:</strong> <%= car.capacity %></p>
          <p><strong>Owner:</strong> <%= car.user.email %></p>
          <div id="statusDisplay"></div>
          <%= link_to "View Details", car_path(car), style: "background-color: blue; color: white; text-decoration: none; padding: 5px 10px; border-radius: 5px;" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No cars available.</p>
  <% end %>
</div>

<%= link_to 'New car', new_car_path %>
