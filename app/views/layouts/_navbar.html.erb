<div class="index-nav-bar">
    <a style="text-decoration: none;" href="<%= root_path %>">
      <div class="logo">Rent your car</div>
    </a>

    <div class="search-box">
      <%= form_with(url: cars_path, class: "search", method: :get) do |form| %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control search-bar",
              placeholder: "Type a keyword"
          %>
        <%= button_tag(type: "submit", class: "search-btn") do %>
          <i class="fa-solid fa-magnifying-glass"></i>
        <% end %>
      <% end %>
    </div>

    <div class="menu">
      <div class="dropdown">
        <button class="dropbtn" style="background-color: #0c4ae2; color: white; border-style: none;">
          <i id="user" class="fa-solid fa-user" style="color: white; font-size: 20px;"></i>
        </button>
        <div class="dropdown-content" style="border-radius: 10px;">
          <%= link_to "All Cars", cars_path, style: "border-bottom-style: outset;" %>
          <%= link_to 'List your car', new_car_path, style: "border-bottom-style: outset;" %>
          <a href="#">Rent a car</a>
        </div>
      </div>

      <div class="user-links-container">
        <% if user_signed_in? %>
          <%= button_to "logout", destroy_user_session_path, method: :delete, style: "background-color: #0c4ae2; color: white; border-style: none;" %>
        <% else %>
          <!-- If user is not signed in, display login and register links -->
          <%= link_to 'Login', new_user_session_path, style: "color: black; text-decoration: none;" %>
          <%= link_to 'Register', new_user_registration_path, style: "color: black; text-decoration: none;" %>
        <% end %>
      </div>
    </div>
  </div>
